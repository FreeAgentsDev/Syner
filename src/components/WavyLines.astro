---
interface Props {
  position?: 'top-left' | 'top-center' | 'bottom-right' | 'all';
}

const { position = 'all' } = Astro.props;
---

<div class="absolute inset-0 overflow-hidden pointer-events-none">
  {position === 'all' || position === 'top-left' ? (
    <svg class="absolute top-0 left-0 w-96 h-96 opacity-30" viewBox="0 0 400 400" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0,200 Q100,150 200,200 T400,200" stroke="url(#gradient1)" stroke-width="2" fill="none" opacity="0.6"/>
      <path d="M0,180 Q100,130 200,180 T400,180" stroke="url(#gradient1)" stroke-width="2" fill="none" opacity="0.5"/>
      <path d="M0,220 Q100,170 200,220 T400,220" stroke="url(#gradient1)" stroke-width="2" fill="none" opacity="0.4"/>
      <defs>
        <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%" style="stop-color:#1a8bff;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#4da5ff;stop-opacity:0.8" />
        </linearGradient>
      </defs>
    </svg>
  ) : null}
  
  {position === 'all' || position === 'top-center' ? (
    <svg class="absolute top-0 left-1/2 transform -translate-x-1/2 w-64 h-64 opacity-25" viewBox="0 0 300 300" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="150" cy="150" r="120" stroke="url(#gradient2)" stroke-width="2" fill="none" opacity="0.5"/>
      <circle cx="150" cy="150" r="100" stroke="url(#gradient2)" stroke-width="2" fill="none" opacity="0.4"/>
      <defs>
        <linearGradient id="gradient2" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#1a8bff;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#80bfff;stop-opacity:0.6" />
        </linearGradient>
      </defs>
    </svg>
  ) : null}
  
  {position === 'all' || position === 'bottom-right' ? (
    <svg class="absolute bottom-0 right-0 w-96 h-96 opacity-30" viewBox="0 0 400 400" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M400,200 Q300,250 200,200 T0,200" stroke="url(#gradient3)" stroke-width="2" fill="none" opacity="0.6"/>
      <path d="M400,180 Q300,230 200,180 T0,180" stroke="url(#gradient3)" stroke-width="2" fill="none" opacity="0.5"/>
      <path d="M400,220 Q300,270 200,220 T0,220" stroke="url(#gradient3)" stroke-width="2" fill="none" opacity="0.4"/>
      <defs>
        <linearGradient id="gradient3" x1="100%" y1="0%" x2="0%" y2="0%">
          <stop offset="0%" style="stop-color:#1a8bff;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#4da5ff;stop-opacity:0.8" />
        </linearGradient>
      </defs>
    </svg>
  ) : null}
</div>

